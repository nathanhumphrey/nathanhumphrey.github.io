---
layout: layouts/base.njk
templateClass: tmpl-post
---
<p class="meta"><time datetime="{{page.date.toISOString()}}">{{page.date.toLocaleDateString()}}</time>
<h1>{{ title }}</h1>
<span class="meta">by {{metadata.author.name}}</span>
<span class="tags">
{% for tag in tags %}
    {%- if tag != "posts" -%}
    {% set tagUrl %}/tags/{{ tag }}/{% endset %}
    <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
    {%- endif -%}
{% endfor %}
</span>
{{ content | safe }}

<p>
    <a href="{{ '#top' | url }}">Top</a>
</p>